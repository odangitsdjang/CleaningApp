
    <h1>Register</h1>
    
    
      <!-- TODO div class="alert alert-danger" doesnt show .. it's so much prettier Q_Q -->
    {{#if errors}}
      {{#each errors}}
        <div class= "alert-danger"> {{msg}}  </div>
      {{/each}}
    {{/if}}

      <form method="post" action="/register">
     <div class="form-group ">
       <label >Name</label>
       <input type="text" class="form-control" placeholder="Name" id="name" name="name">
       <i class="fa fa-user"></i>
     </div>

     <div class="form-group ">
       <label >Username</label>
       <input type="text" class="form-control" placeholder="Username" id="UserName" name="username">
       <i class="fa fa-user"></i>
     </div>
     <div class="form-group ">
       <label >Email</label>
       <input type="email" class="form-control" placeholder="Email" id="email" name="email">
       <i class="fa fa-user"></i>
     </div>
     <div class="form-group log-status">
       <label >Password</label>
       <input type="password" class="form-control" placeholder="Password" id="Password" name="password">
       <i class="fa fa-lock"></i>
     </div>
     <div class="form-group log-status">
       <label>Confirm Password</label>
       <input type="password" class="form-control" placeholder="Confirm Password" id="Password2" name="password2">
       <i class="fa fa-lock"></i>
     </div>
     <button type="submit" class="log-btn" id="signup-btn">Sign Up</button>
     <!-- <a href="/index/" class="log-btn" onclick="validate()">Log in</a> --> 

     </form>



