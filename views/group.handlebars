<!doctype html>

<html>
<head>
	<title>Group Page</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href="/css/navbar.css" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">

	<!--To include navbar in your pages, also add the navbar script in the bottom of the file --> 
	<nav id="navMenu"></nav>

</head>

<body>
	<h1>Group</h1>

	<div id="myGroup"></div>

	<button id="myBtn">Add Member</button>

	<div id="myModal" class="modal">

	<div class="modal-content">

	<div class="panel panel-default">
	  <div class="panel-heading clearfix">
	    <h3 class="panel-title pull-left">Add a Member</h3>
	    <div class="btn-group pull-right">
	      <button class="btn btn-danger cancelBtn">
	        <i class="fa fa-times"></i>
	        Cancel
	      </button>
	      <button class="btn btn-success" id="addMember">
	        <i class="fa fa-check"></i>
	        Add
	      </button>
	    </div>
	  </div>
	  <div class="modal-body">
	    <form class="form-horizontal">
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Name</label>
	        <div class="col-xs-9">
	          <input type="text" class="form-control" id="addName" placeholder="Add a Username">
	        </div>
	      </div>
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Email</label>
	        <div class="col-xs-9">
	          <input type="text" class="form-control" id="addEmail" placeholder="Add the users email">
	        </div>
	      </div>
	    </form>
	  </div>
	  <div class="panel-footer">
	    <small></small>
	  </div>
	</div>
	</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<script src="/js/group.js"></script>
	<script src="/js/navbar.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/bootcards/1.0.0/js/bootcards.min.js"></script>
</body>

</html>