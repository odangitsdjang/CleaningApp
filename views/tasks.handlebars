	<nav id="navMenu"></nav>

</head>

<body>
	<div class="jumbotron">
		<h1>Add Task Page</h1>	
	</div>
	

	<button id="myBtn">Add Task</button>

	<div id="myModal" class="modal">

	<div class="modal-content">

	<div class="panel panel-default">
	  <div class="panel-heading clearfix">
	    <h3 class="panel-title pull-left">Add a Task</h3>
	    <div class="btn-group pull-right">
	      <button class="btn btn-danger cancelBtn">
	        <i class="fa fa-times"></i>
	        Cancel
	      </button>
	      <button class="btn btn-success" id="saveTask">
	        <i class="fa fa-check"></i>
	        Save
	      </button>
	    </div>
	  </div>
	  <div class="modal-body">
	    <form class="form-horizontal">
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Name</label>
	        <div class="col-xs-9">
	          <input type="text" class="form-control" id="taskName" placeholder="Name the task">
	        </div>
	      </div>
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Reward</label>
	        <div class="col-xs-9">
	          <input type="number" class="form-control" id="taskReward" min="0" placeholder="$0.0">
	        </div>
	      </div>
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Description</label>
	        <div class="col-xs-9">
	          <textarea class="form-control" id="taskDescription" rows="6" placeholder="Add Description for task"></textarea>
	        </div>
	      </div>
	    </form>
	  </div>
	  <div class="panel-footer">
	    <small></small>
	  </div>
	</div>
	</div>
	</div>

	<div id="editModal" class="modal">

	<div class="modal-content">

	<div class="panel panel-default">
	  <div class="panel-heading clearfix">
	    <h3 class="panel-title pull-left">Edit a Task</h3>
	    <div class="btn-group pull-right">
	      <button class="btn btn-danger editCancel">
	        <i class="fa fa-times"></i>
	        Cancel
	      </button>
	      <button class="btn btn-success" onclick="saveEdit()" id="saveEdit">
	        <i class="fa fa-check"></i>
	        Save
	      </button>
	    </div>
	  </div>
	  <div class="modal-body">
	    <form class="form-horizontal">
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Name</label>
	        <div class="col-xs-9">
	          <input type="text" class="form-control" id="taskNameEdit" placeholder="Name the task">
	        </div>
	      </div>
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Reward</label>
	        <div class="col-xs-9">
	          <input type="number" class="form-control" id="taskRewardEdit" min="0" placeholder="$0.0">
	        </div>
	      </div>
	      <div class="form-group">
	        <label class="col-xs-3 control-label">Description</label>
	        <div class="col-xs-9">
	          <textarea class="form-control" id="taskDescriptionEdit" rows="6" placeholder="Add Description for task"></textarea>
	        </div>
	      </div>
	    </form>
	  </div>
	  <div class="panel-footer">
	    <small></small>
	  </div>
	</div>
	</div>
	</div>
	<div id="shit1"></div>
	<div id="shit2"></div>
	<div id="tasks"></div>

    
